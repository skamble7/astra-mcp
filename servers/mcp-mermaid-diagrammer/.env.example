# --- MCP Transport Configuration ---
MCP_TRANSPORT=streamable-http
MCP_HOST=0.0.0.0
MCP_PORT=8001
# MCP_MOUNT_PATH=/mcp
# MCP_STATELESS_JSON=true  # optional: makes curl/browser pokes easier

LOG_LEVEL=INFO

# --- LLM (optional; leave disabled to use offline fallback) ---
LLM_PROVIDER=OpenAI
LLM_MODEL=openai:gpt-4o-mini
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1200
ENABLE_REAL_LLM=true
# For real providers, inject secrets at runtime (do NOT commit):
OPENAI_API_KEY=<openai key here>
