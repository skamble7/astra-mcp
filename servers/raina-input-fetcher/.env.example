# Transport (stdio | streamable-http | sse)
MCP_TRANSPORT=stdio
MCP_HOST=0.0.0.0
MCP_PORT=8003
MCP_MOUNT_PATH=/mcp
MCP_SSE_PATH=/sse
MCP_STATELESS_JSON=true

# Service
SERVICE_NAME=mcp.raina.input.fetcher
LOG_LEVEL=INFO

# HTTP client
HTTP_TIMEOUT_SECONDS=30
HTTP_FOLLOW_REDIRECTS=true
DEFAULT_AUTH_BEARER=

# Optional: artifact naming / tags
ARTIFACT_NAME_PREFIX=Raina Input
ARTIFACT_TAGS=inputs,raina,discovery